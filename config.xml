<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.vcardqr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>vCardQR</name>
    <description>
        An app that generates a QR code for a contact.
    </description>
    <author email="aegraham@gmail.com" href="https://coderaaron.com">
        Aaron Graham
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-contacts" spec="^2.3.1">
        <variable name="CONTACTS_USAGE_DESCRIPTION" value="Access contacts to generate a QR code from that contact's vCard" />
    </plugin>
    <engine name="ios" spec="~4.5.2" />
</widget>
